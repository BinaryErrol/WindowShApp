<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit windowshop</h1>
    <div class="col-6 offset-3">
        <form action="/windowshops/<%=windowshop._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="windowshop[title]"
                    value="<%=windowshop.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="windowshop[location]"
                    value="<%=windowshop.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="price">windowshop Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="windowshop[price]" value="<%=windowshop.price %>"
                        required><div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="windowshop[description]"
                    required><%= windowshop.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="custom-file mb-3">
                <label for="formFileMultiple" class="custom-file-label form-label" for="image">Add More Images</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" id="image" multiple>
            </div>

            <div class="mb-3">
                <% windowshop.images.forEach(function(img, i) {  %>

                    <img src="<%=img.url%>" class="img-thumbnail" alt="">
                    <div class="form-check">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% })%>  
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update WindowShop</button>
            </div>
        </form>
        <a href="/windowshops/<%= windowshop._id%>">Back To WindowShop</a>

    </div>
</div>